def fac():    
    num = int(input("Please put in a numberï¼š"))    
    factorial = 1

# if else  
    if num < 0:        
        print("negative numbers do not have factorials")     
    elif num == 0:        
        print("factorial of is 1")    
    else:        
        for i in range(1, num + 1):            
            factorial = factorial * i        
        print("factorial of %d is %d" % (num, factorial))
fac()
